{
  "name": "yuihub-vscode-client",
  "displayName": "YuiHub VSCode Client (V1)",
  "publisher": "ve",
  "version": "1.1.36",
  "description": "YuiHub VSCode Client: Connects to local YuiHub Engine for semantic memory and private agent execution.",
  "repository": {
    "type": "git",
    "url": "https://github.com/vemikrs/yuihub.git",
    "directory": "apps/vscode-client"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#0ea5e9",
    "theme": "dark"
  },
  "keywords": [
    "YuiHub",
    "VSCode",
    "Copilot",
    "Antigravity",
    "Cursor",
    "Agent",
    "Memory",
    "Chat",
    "Context",
    "Packet"
  ],
  "contributes": {
    "commands": [
      {
        "command": "yuihub.smokeTest",
        "title": "YuiHub: Smoke Test (Health)",
        "category": "YuiHub"
      },
      {
        "command": "yuihub.search",
        "title": "YuiHub: Searchâ€¦",
        "category": "YuiHub"
      },
      {
        "command": "yuihub.saveSelection",
        "title": "YuiHub: Save Selection to Memory",
        "category": "YuiHub",
        "enablement": "isWorkspaceTrusted"
      },
      {
        "command": "yuihub.createCheckpoint",
        "title": "YuiHub: Create Checkpoint (Decision Anchor)",
        "category": "YuiHub"
      },
      {
        "command": "yuihub.openLogs",
        "title": "YuiHub: Open Logs",
        "category": "YuiHub"
      },
      {
        "command": "yuihub.setApiToken",
        "title": "YuiHub: Set API Token",
        "category": "YuiHub"
      },
      {
        "command": "yuihub.installMcpServer",
        "title": "YuiHub: Install MCP Server (Antigravity/Cursor)",
        "category": "YuiHub"
      }
    ],
    "configuration": {
      "title": "YuiHub",
      "properties": {
        "yuihub.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:4182",
          "description": "Base URL of the YuiHub API"
        },
        "yuihub.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Token (Optional - uses file-based token by default)"
        },
        "yuihub.useManagedAuth": {
          "type": "boolean",
          "default": true,
          "description": "Use file-based token from ~/.yuihub/.token"
        },
        "yuihub.searchLimit": {
          "type": "number",
          "default": 10,
          "description": "Max results for search."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yuihub",
          "title": "YuiHub",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "yuihub": [
        {
          "id": "yuihub.results",
          "name": "Search Results",
          "icon": "media/search-icon.svg"
        }
      ]
    },
    "languageModelTools": [
      {
        "name": "yuihub_save_thought",
        "displayName": "Save Thought",
        "description": "Save a thought, memo, or decision to YuiHub memory",
        "toolReferenceName": "yuihub_save_thought",
        "modelDescription": "Use this tool to save important thoughts, decisions, memos, or context to YuiHub semantic memory for later retrieval.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The thought, memo, or decision to save"
            },
            "session_id": {
              "type": "string",
              "description": "Session/Thread ID (th-ULID format)"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Optional tags"
            },
            "mode": {
              "type": "string",
              "enum": [
                "private",
                "public"
              ],
              "default": "private"
            }
          },
          "required": [
            "text",
            "session_id"
          ]
        }
      },
      {
        "name": "yuihub_search_memory",
        "displayName": "Search Memory",
        "description": "Search past memories using semantic search",
        "toolReferenceName": "yuihub_search_memory",
        "modelDescription": "Use this tool to search YuiHub semantic memory for relevant past thoughts, decisions, and context.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Semantic search query"
            },
            "limit": {
              "type": "number",
              "default": 10,
              "description": "Maximum results"
            },
            "session": {
              "type": "string",
              "description": "Filter by session ID"
            },
            "tag": {
              "type": "string",
              "description": "Filter by tag"
            }
          },
          "required": [
            "query"
          ]
        }
      },
      {
        "name": "yuihub_start_session",
        "displayName": "Start Session",
        "description": "Start a new thinking session/thread",
        "toolReferenceName": "yuihub_start_session",
        "modelDescription": "Use this tool to create a new YuiHub session for organizing related thoughts and context.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Optional session title"
            }
          }
        }
      },
      {
        "name": "yuihub_fetch_context",
        "displayName": "Fetch Context",
        "description": "Fetch context packet for a given intent or session",
        "toolReferenceName": "yuihub_fetch_context",
        "modelDescription": "Use this tool to retrieve relevant context from YuiHub memory for a specific intent or session.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "intent": {
              "type": "string",
              "description": "Current intent/goal for context retrieval"
            },
            "session": {
              "type": "string",
              "description": "Session ID to get context for"
            }
          }
        }
      },
      {
        "name": "yuihub_create_checkpoint",
        "displayName": "Create Checkpoint",
        "description": "Create a decision checkpoint to persist current state",
        "toolReferenceName": "yuihub_create_checkpoint",
        "modelDescription": "Use this tool to create a checkpoint that persists the current decision state and working memory.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "session_id": {
              "type": "string",
              "description": "Session ID to checkpoint"
            },
            "summary": {
              "type": "string",
              "description": "Summary of the decision/conclusion"
            },
            "intent": {
              "type": "string",
              "description": "Current goal/intent"
            },
            "working_memory": {
              "type": "object",
              "description": "Current working memory state"
            },
            "entry_ids": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Related entry IDs"
            }
          },
          "required": [
            "session_id",
            "summary",
            "intent"
          ]
        }
      }
    ]
  },
  "main": "./dist/extension.js",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --format=cjs --platform=node --external:vscode --sourcemap",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --format=cjs --platform=node --external:vscode --sourcemap --watch",
    "typecheck": "tsc --noEmit",
    "package": "mkdir -p packages && vsce package --no-dependencies --allow-missing-repository -o packages/"
  },
  "dependencies": {
    "@yuihub/core": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "1.107.0",
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.7.1"
  }
}
