# YuiHub API Configuration

# Server Settings
PORT=3000
HOST=localhost

# Storage Adapter (local|github|notion)
STORAGE_ADAPTER=local

# GitHub Settings (when using github adapter)
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name
GITHUB_BRANCH=main
GITHUB_PATH=chatlogs

# Local Storage Settings (when using local adapter)
LOCAL_STORAGE_PATH=./chatlogs

# Notion Settings (when using notion adapter)
NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_database_id_here

# Search Index Settings
LUNR_INDEX_PATH=./index/lunr.idx.json
TERMS_INDEX_PATH=./index/terms.json

# Cloudflare Tunnel Settings
# Fixed Named Tunnel Configuration
# TUNNEL_BASE_URL=https://your-subdomain.example.com
# TUNNEL_TOKEN=your_cloudflare_tunnel_token_here