                    "beginsPattern": "^.*Starting yuihub-mcp.*$",
                    "endsPattern": "^.*MCP Server ready.*$"
                }
            }
        },
        {
            "label": "YuiHub: Build Search Index",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build-all"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "env": {
                    "LOCAL_STORAGE_PATH": "${workspaceFolder}/chatlogs"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "YuiHub: Test API Endpoints",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "echo 'Testing YuiHub API endpoints...' && sleep 2 && curl -s http://localhost:3000/health | python3 -m json.tool && echo '' && echo 'Search test:' && curl -s 'http://localhost:3000/search?q=TypeScript' | python3 -m json.tool && echo '' && echo 'Recent notes:' && curl -s 'http://localhost:3000/recent?n=5' | python3 -m json.tool"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "YuiHub: Stop All Servers",
            "type": "shell",
            "command": "pkill",
            "args": ["-f", "yuihub"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "YuiHub: Start Cloudflare Tunnel",
            "type": "shell", 
            "command": "bash",
            "args": ["${workspaceFolder}/.cloudflare/tunnel.sh"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
