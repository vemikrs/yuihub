            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting YuiHub Cloudflare Tunnel.*$",
                    "endsPattern": "^.*Tunnel established successfully.*$"
                }
            }
        },
        {
            "label": "YuiHub: Test Tunnel Connection",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "echo 'Testing Cloudflare Tunnel connection...' && sleep 2 && if [ -f .cloudflare/.tunnel-url ]; then API_URL=$(cat .cloudflare/.tunnel-url) && echo 'Tunnel URL: '$API_URL && curl -s \"$API_URL/health\" | python3 -m json.tool; else echo 'Tunnel not active. Start tunnel first.'; fi"],
