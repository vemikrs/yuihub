{
  "name": "yuihub-workspace",
  "version": "0.2.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "yuihub_api",
    "yuihub_mcp"
  ],
  "scripts": {
    "reindex": "node scripts/build-index.js",
    "reindex:with-dev": "YH_INDEX_ROOTS=chatlogs,docs/logdocs node scripts/build-index.js",
    "dev:api": "cd yuihub_api && npm run dev",
    "dev:tunnel": "cd yuihub_api && ENABLE_TUNNEL=true TUNNEL_MODE=quick npm run dev",
    "start:api": "cd yuihub_api && npm start",
    "start:prod": "cd yuihub_api && ENABLE_TUNNEL=true TUNNEL_MODE=named npm start",
    "start:prod-tunnel": "cd yuihub_api && ENABLE_TUNNEL=true TUNNEL_MODE=named npm start",
    "start:mcp": "cd yuihub_mcp && npm start",
    "build-index": "node scripts/chunk_and_lunr.mjs",
    "build-terms": "node scripts/build_terms.mjs",
    "build-summaries": "node scripts/summarize_weekly.mjs",
    "build-all": "npm run build-index && npm run build-terms && npm run build-summaries",
    "install-all": "npm install && cd yuihub_api && npm install && cd ../yuihub_mcp && npm install",
    "tunnel:setup": "bash .cloudflare/setup-tunnel.sh",
    "tunnel:start": "bash .cloudflare/start-tunnel.sh",
    "tunnel:quick": "node .cloudflare/tunnel-cli.js quick",
    "tunnel:named": "node .cloudflare/tunnel-cli.js named",
    "tunnel:status": "node .cloudflare/tunnel-cli.js status",
    "tunnel:stop": "node .cloudflare/tunnel-cli.js stop",
    "tunnel:test": "bash -c 'API_URL=$(grep -o \"https://[^/]*\" .cloudflare/start-tunnel.sh | head -1) && curl -s \"$API_URL/health\" | python3 -m json.tool'",
    "smoke": "curl -s http://127.0.0.1:3000/health | node -e \"process.stdin.pipe(require('stream').Writable({write(c,_,n){try{JSON.parse(c)}catch(e){process.exit(1)}n()}}))\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "tiny-segmenter": "^0.2.0",
    "js-yaml": "^4.1.0",
    "lunr": "^2.3.9"
  }
}
