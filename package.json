{
  "name": "yuihub-workspace",
  "version": "0.2.1",
  "type": "module",
  "private": true,
  "engines": {
    "node": "^22.0.0"
  },
  "workspaces": [
    "apps/v0/*",
    "apps/v1/*",
    "apps/vscode-client",
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test:v1",
    "test:v1": "echo 'No tests yet'",
    "build:core": "npm run build --workspace=@yuihub/core",
    "build:backend": "npm run build --workspace=@yuihub/v1-backend",
    "build:client": "npm run build --workspace=yuihub-copilot-chat",
    "build:all-v1": "npm run build:core && npm run build:backend && npm run build:client",
    "build-all": "npm run build:all-v1",
    "start:api": "node apps/v0/yuihub_api/src/server.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1"
  },
  "dependencies": {}
}
