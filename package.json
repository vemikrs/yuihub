{
  "name": "yuihub-workspace",
  "version": "1.0.0-beta.31",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "^22.0.0"
  },
  "scripts": {
    "sync:version": "node scripts/sync-version.js",
    "test": "pnpm test:backend && pnpm test:mcp-server",
    "test:backend": "pnpm --filter @yuihub/server test",
    "test:mcp-server": "pnpm --filter @yuihub/mcp-server test",
    "build:core": "pnpm --filter @yuihub/core build",
    "build:backend": "pnpm --filter @yuihub/server build",
    "build:mcp-server": "pnpm --filter @yuihub/mcp-server build",
    "build:vscode-client": "pnpm --filter yuihub-vscode-client build",
    "build:all": "pnpm build:core && pnpm build:backend && pnpm build:mcp-server && pnpm build:vscode-client",
    "dev:backend": "pnpm --filter @yuihub/server dev",
    "dev:mcp-stdio": "pnpm --filter @yuihub/mcp-server dev:stdio",
    "dev:mcp-sse": "pnpm --filter @yuihub/mcp-server dev:sse",
    "vscode:watch": "pnpm --filter yuihub-vscode-client watch",
    "vscode:typecheck": "pnpm --filter yuihub-vscode-client typecheck",
    "vscode:package": "pnpm sync:version && pnpm --filter yuihub-vscode-client package"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "sharp": "0.34.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "tree-sitter",
      "tree-sitter-javascript",
      "tree-sitter-typescript"
    ],
    "overrides": {
      "sharp": "0.34.5"
    }
  }
}
